<header>
  <ul id="dropdown1" class="dropdown-content">
    <li><%= session_link %></li>
    <% if logged_in? %>
      <li><%= link_to "Profile", student_path(current_user) %></li>
    <% end %>
    <li class="divider"></li>
    <li><a href="#!">three</a></li>
  </ul>
  <!-- For mobiles phones -->
  <ul id="dropdown2" class="dropdown-content">
    <li><%= session_link %></li>
    <% if logged_in? %>
      <li><%= link_to "Profile", student_path(current_user) %></li>
    <% end %>
    <li class="divider"></li>
    <li><a href="#!">three</a></li>
  </ul>
  <!-- -->
  <nav>
    <div class="container">
      <div class="nav-wrapper">
        <%= link_to "Tech university", root_path, class: "brand-logo right" %>
        <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
        <ul id="nav-mobile" class="left hide-on-med-and-down">
          <li><%= link_to "Cources", root_path %></li>
          <% if logged_in? %>
            <li><%= link_to "Students", students_path %></li>
          <% end %>
          <li><a class="dropdown-trigger" href="#!" data-target="dropdown1">Account<i class="material-icons right">arrow_drop_down</i></a></li>
        </ul>
        <!-- For mobiles phones -->
        <ul class="sidenav" id="mobile-demo">
          <li><%= link_to "Cources", root_path %></li>
          <% if logged_in? %>
            <li><%= link_to "Students", students_path %></li>
          <% end %>
          <li><a class="dropdown-trigger" href="#!" data-target="dropdown2">Account<i class="material-icons right">arrow_drop_down</i></a></li>
        </ul>
        <!-- -->
      </div>
    </div>
  </nav>

  <!-- flash messages -->
  <% flash.each do |key, msg|%>
    <div class="container">
      <div class="row sign-up-form">
        <div class="col s12 m12 l12">
          <div class="card-panel <%= key == "notice" ? "green" : "red" %> lighten-2" id="fade-out-target">
            <span class="white-text">
              <%= msg %>
            </span>
          </div>
        </div>
      </div>
    </div>  
  <% end %>
</header>

