<div class="row sign-up-form">
  <div class="col s12 m12">
    <div class="card blue-grey darken-1 center-align">
      <div class="card-content white-text">
        <span class="card-title"><%= @student.name %></span>
        <p>Email: <%= @student.email %></p>
        <p>Course Enrollments: None</p>
      </div>
    </div>
    <% if current_user == @student %>
      <%= link_to '<i class="material-icons left">create</i>Edit'.html_safe, edit_student_path(@student), class: "waves-effect waves-light btn" %>
    <% end %>
  </div>
</div>